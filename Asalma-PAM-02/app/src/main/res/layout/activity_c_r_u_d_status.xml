<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradien"
    tools:context=".ui.CRUDStatus">

    <TextView
        android:id="@+id/sttspddk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:text="Status Penduduk"
        android:textSize="35dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#000000"
        />
    <TextView
        android:id="@+id/txtpositif"
        android:layout_below="@+id/sttspddk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:text="Positif"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#000000"
        />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sttspddk"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@+id/txtsembuh"


        />
    <TextView
        android:id="@+id/txtsembuh"
        android:layout_below="@+id/txtpositif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:text="Sembuh"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#000000"
        />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtpositif"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/txtsembuh"
        />
    <TextView
        android:id="@+id/txtmeninggal"
        android:layout_below="@+id/txtsembuh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:text="Meninggal"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#000000"
        />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtsembuh"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/txtsembuh"
        />
    <TextView
        android:id="@+id/txtodp"
        android:layout_below="@+id/txtmeninggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:text="ODP"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#000000"
        />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtmeninggal"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/txtsembuh"
        />
    <TextView
        android:id="@+id/txtpdp"
        android:layout_below="@+id/txtodp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:text="PDP"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#000000"
        />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtodp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/txtsembuh"
        />
    <Button
        android:id="@+id/btnreset"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="#DD3C30"
        android:text="Reset"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:layout_below="@+id/txtpdp"
        android:layout_marginTop="1.4in"
        android:layout_marginLeft="16dp"
        ></Button>
    <Button
        android:id="@+id/btnback2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="#2196F3"
        android:text="Simpan"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:layout_below="@+id/txtpdp"
        android:layout_marginTop="1.4in"
        android:layout_toRightOf="@id/btnreset"
        android:layout_marginLeft="10dp"
        ></Button>


</RelativeLayout>