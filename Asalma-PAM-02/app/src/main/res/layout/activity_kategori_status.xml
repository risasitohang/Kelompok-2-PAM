<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.KategoriStatus">

    <TextView
        android:id="@+id/sttspddk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:text="Status Penduduk"
        android:textSize="35dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#000000"
        />
    <Button
        android:id="@+id/btnhasil"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_below="@+id/sttspddk"
        android:layout_marginStart="55dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="150dp"
        android:text="Hasil Cek Covid-19"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:background="#3C3D43"
        ></Button>
    <Button
        android:id="@+id/btnstatus"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_below="@+id/btnhasil"
        android:layout_marginStart="55dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"
        android:text="Status Penduduk"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:background="#3C3D43"
        ></Button>

</RelativeLayout>